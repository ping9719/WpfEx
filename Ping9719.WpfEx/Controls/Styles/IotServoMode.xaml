<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:local="clr-namespace:Ping9719.WpfEx"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:hc="https://handyorg.github.io/handycontrol">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/Theme.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="IotServoModeStyle" TargetType="{x:Type local:IotServoMode}">
        <Setter Property="hc:BorderElement.CornerRadius" Value="{StaticResource DefaultCornerRadius}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Background" Value="White" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Height" Value="auto"/>
        <Setter Property="Width" Value="290"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:IotServoMode}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding hc:BorderElement.CornerRadius}"
                            Padding="0">
                        <Grid Margin="{TemplateBinding Padding}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="82"></ColumnDefinition>
                                <ColumnDefinition Width="82"></ColumnDefinition>
                                <ColumnDefinition Width="auto"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                            </Grid.RowDefinitions>
                            <!--上半部分-->
                            <!--标题-->
                            <TextBlock MaxHeight="60" Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Margin="3,0" FontSize="{TemplateBinding FontSize}" ToolTip="{TemplateBinding Text}" hc:TextBlockAttach.AutoTooltip="True" TextWrapping="Wrap" TextTrimming="CharacterEllipsis" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{TemplateBinding Text}"></TextBlock>
                            <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Width="1" Height="auto" Margin="0,5" Padding="0" HorizontalAlignment="Right" Style="{StaticResource BorderRegion}"/>
                            <!--速度-->
                            <Grid Grid.Row="0" Grid.Column="1" Grid.RowSpan="1" Margin="0,1" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0" Margin="3,0" x:Name="ms">
                                    <TextBlock FontSize="{TemplateBinding FontSize}" ToolTip="手动模式速度，点击可切换" Text="手动模式" Visibility="{TemplateBinding IsVis1,Converter={StaticResource Boolean2VisibilityConverter}}"></TextBlock>
                                    <TextBlock FontSize="{TemplateBinding FontSize}" ToolTip="自动模式速度，点击可切换" Text="自动模式" Visibility="{TemplateBinding IsVis1,Converter={StaticResource Boolean2VisibilityReConverter}}"></TextBlock>
                                </Grid>
                                <Grid Grid.Column="1" x:Name="zd">
                                    <Button Cursor="Hand" Style="{StaticResource ButtonIcon}" ToolTip="折叠，点击可展开" Margin="3,0" Padding="0" Width="auto" Height="auto" hc:IconElement.Width="10" hc:IconElement.Height="10" hc:IconElement.Geometry="{StaticResource DownGeometry}" Visibility="{TemplateBinding IsFold,Converter={StaticResource Boolean2VisibilityConverter}}"/>
                                    <Button Cursor="Hand" Style="{StaticResource ButtonIcon}" ToolTip="展开，点击可折叠" Margin="3,0" Padding="0" Width="auto" Height="auto" hc:IconElement.Width="10" hc:IconElement.Height="10" hc:IconElement.Geometry="{StaticResource UpGeometry}" Visibility="{TemplateBinding IsFold,Converter={StaticResource Boolean2VisibilityReConverter}}"/>
                                </Grid>
                            </Grid>
                            <!--速度-下-->
                            <Grid Grid.Row="1" Grid.Column="1" Grid.RowSpan="1" Margin="3,3">
                                <TextBlock FontSize="{TemplateBinding FontSize}" hc:TextBlockAttach.AutoTooltip="True" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" HorizontalAlignment="Center" VerticalAlignment="Top" Text="{TemplateBinding Speed1}" Visibility="{TemplateBinding IsVis1,Converter={StaticResource Boolean2VisibilityConverter}}"></TextBlock>
                                <TextBlock FontSize="{TemplateBinding FontSize}" hc:TextBlockAttach.AutoTooltip="True" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" HorizontalAlignment="Center" VerticalAlignment="Top" Text="{TemplateBinding Speed2}" Visibility="{TemplateBinding IsVis1,Converter={StaticResource Boolean2VisibilityReConverter}}"></TextBlock>
                            </Grid>
                            <Border Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" Width="1" Height="auto" Margin="0,5" Padding="0" HorizontalAlignment="Right" Style="{StaticResource BorderRegion}"/>
                            <!--当前位置-->
                            <TextBlock Grid.Row="0" Grid.Column="2" Grid.RowSpan="1" Margin="3,0" FontSize="{TemplateBinding FontSize}" hc:TextBlockAttach.AutoTooltip="True" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{TemplateBinding Location}"></TextBlock>
                            <TextBox x:Name="textwz" Grid.Row="1" Grid.Column="2" Grid.RowSpan="1" Margin="3,0" Padding="3,0" Height="auto" VerticalAlignment="Center" Style="{StaticResource TextBoxExtend}" hc:InfoElement.Placeholder="移动到位置"></TextBox>
                            <Border Grid.Row="0" Grid.Column="2" Grid.RowSpan="2" Width="1" Height="auto" Margin="0,5" Padding="0" HorizontalAlignment="Right" Style="{StaticResource BorderRegion}"/>
                            <!--设置位置-->
                            <StackPanel Grid.Row="0" Grid.Column="3" Grid.RowSpan="1" Margin="3,1,1,1" Orientation="Horizontal">
                                <Button x:Name="butyd1" ToolTip="位置点动加" Height="{Binding ActualHeight,ElementName=butyd}" Width="auto" Padding="10,0" Margin="0,0,0,0" hc:BorderElement.CornerRadius="4,0,0,4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" hc:IconElement.Width="7" hc:IconElement.Geometry="{StaticResource AddGeometry}"></Button>
                                <Button x:Name="butyd2" ToolTip="位置点动减" Height="auto" Width="auto" Padding="10,0" Margin="-1,0,0,0" hc:BorderElement.CornerRadius="0,4,4,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" hc:IconElement.Width="7" hc:IconElement.Geometry="{StaticResource SubGeometry}"></Button>
                            </StackPanel>
                            <Button x:Name="butyd" Grid.Row="1" Grid.Column="3" Grid.RowSpan="1" ToolTip="移动到指定位置" Height="auto" Width="auto" Margin="3,1,1,1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">移动</Button>

                            <!--下半部分-->
                            <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4" Background="LightGoldenrodYellow" Width="auto" Height="70" Margin="-1,1,-1,-1" Padding="0" CornerRadius="0,0,4,4" Style="{StaticResource BorderRegion}" VerticalAlignment="Top" Visibility="{TemplateBinding IsFold,Converter={StaticResource Boolean2VisibilityReConverter}}">
                                <Grid Margin="0,1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"></RowDefinition>
                                        <RowDefinition Height="auto"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="82"></ColumnDefinition>
                                        <ColumnDefinition Width="82"></ColumnDefinition>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <!--手动模式-->
                                    <TextBlock Grid.Column="0" Margin="3,0" FontSize="{TemplateBinding FontSize}" ToolTip="{TemplateBinding Text}" hc:TextBlockAttach.AutoTooltip="True" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" HorizontalAlignment="Center" VerticalAlignment="Center" Text="手动模式"></TextBlock>
                                    <TextBlock Grid.Column="1" Margin="3,0" FontSize="{TemplateBinding FontSize}" ToolTip="{TemplateBinding Text}" hc:TextBlockAttach.AutoTooltip="True" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{TemplateBinding Speed1}"></TextBlock>
                                    <TextBox x:Name="text1" ToolTip="当前手动模式速度" Background="LightGoldenrodYellow" Grid.Column="2" Margin="3,0" Padding="1,0" Height="auto" VerticalAlignment="Center" Style="{StaticResource TextBoxExtend}" hc:InfoElement.Placeholder="设置速度"></TextBox>
                                    <Button x:Name="butsd1" ToolTip="设置当前手动模式速度" Background="LightGoldenrodYellow" Grid.Column="3" Height="auto" Width="{Binding ActualWidth,ElementName=butyd}" Margin="3,1,1,1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">设置</Button>
                                    <!--自动模式-->
                                    <TextBlock Grid.Row="1" Grid.Column="0" Margin="3,0" FontSize="{TemplateBinding FontSize}" ToolTip="{TemplateBinding Text}" hc:TextBlockAttach.AutoTooltip="True" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" HorizontalAlignment="Center" VerticalAlignment="Center" Text="自动模式"></TextBlock>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Margin="3,0" FontSize="{TemplateBinding FontSize}" ToolTip="{TemplateBinding Text}" hc:TextBlockAttach.AutoTooltip="True" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{TemplateBinding Speed2}"></TextBlock>
                                    <TextBox x:Name="text2" Grid.Row="1" ToolTip="当前自动模式速度" Background="LightGoldenrodYellow" Grid.Column="2" Margin="3,0" Padding="1,0" Height="auto" VerticalAlignment="Center" Style="{StaticResource TextBoxExtend}" hc:InfoElement.Placeholder="设置速度"></TextBox>
                                    <Button x:Name="butsd2" Grid.Row="1" ToolTip="设置当前自动模式速度" Background="LightGoldenrodYellow" Grid.Column="3" Height="auto" Width="{Binding ActualWidth,ElementName=butyd}" Margin="3,1,1,1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">设置</Button>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.4"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style BasedOn="{StaticResource IotServoModeStyle}" TargetType="{x:Type local:IotServoMode}"/>

</ResourceDictionary>